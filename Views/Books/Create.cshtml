@model BookApp.Models.Book

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container my-5">
    <h1 class="mb-4">Create New Book</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title mb-4">Book Details</h4>

                        <div class="form-group">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter book name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" placeholder="Enter book description" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="Auther" class="form-label"></label>
                            <input asp-for="Auther" class="form-control" placeholder="Enter author's name" />
                            <span asp-validation-for="Auther" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="Date" class="form-label"></label>
                            <input asp-for="Date" class="form-control" type="date" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="Rate" class="form-label"></label>
                            <input asp-for="Rate" class="form-control" type="number" min="1" max="5" />
                            <span asp-validation-for="Rate" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="ImageURL" class="form-label"></label>
                            <input asp-for="ImageURL" class="form-control" placeholder="Enter image URL" />
                            <span asp-validation-for="ImageURL" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="CategoryId" class="form-label"></label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                                <option value="">Select a category</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </form>
        </div>
<div />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
