@model IEnumerable<BookApp.Models.Book>

@{
    ViewData["Title"] = "Read Later";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Read Later</h1>

<div class="container my-4 p-4 shadow rounded">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card bg-secondary text-white h-100">
                    <img src="@Html.DisplayFor(modelItem => item.ImageURL)" class="card-img-top rounded-top" alt="Image">
                    <div class="card-body d-flex flex-column align-items-center">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.Auther)</h6>
                        <p class="card-text text-center">@Html.DisplayFor(modelItem => item.Description)</p>
                        <div class="d-flex w-100 justify-content-between">
                            <a asp-action="Details" asp-route-id="@item.BookId" class="btn btn-info btn-sm">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

